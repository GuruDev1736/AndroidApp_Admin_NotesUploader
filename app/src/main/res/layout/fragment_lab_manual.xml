<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.Lab_manual_upload.lab_manual_fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:gravity="center"
                android:text="Select the department"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <RadioGroup
                android:id="@+id/department_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="150dp">

                <RadioButton
                    android:id="@+id/computer_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Computer" />

                <RadioButton
                    android:id="@+id/mechanical_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mechanical" />

                <RadioButton
                    android:id="@+id/civil_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Civil" />

                <RadioButton
                    android:id="@+id/IT_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IT" />

                <RadioButton
                    android:id="@+id/e_and_tc_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="E And TC" />

            </RadioGroup>

            <TextView
                android:id="@+id/year_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/department_radio"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Select Year"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <RadioGroup
                android:id="@+id/year_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/year_name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="150dp">

                <RadioButton
                    android:id="@+id/first_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="First Year" />

                <RadioButton
                    android:id="@+id/second_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Second Year" />

                <RadioButton
                    android:id="@+id/third_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Third Year" />
            </RadioGroup>



            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/year_radio"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="100dp"
                android:backgroundTint="#03A9F4"
                android:text="Submit"
                android:layout_marginBottom="50dp"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>