<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.Lab_manual_upload.lab_manual_fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:id="@+id/textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="Select the Semester and Department"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <Spinner
                android:id="@+id/sp_sem"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/textview"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:background="#00BCD4" />


            <Spinner
                android:id="@+id/sp_dep"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/sp_sem"
                android:layout_alignBottom="@+id/sp_sem"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="0dp"
                android:background="#00BCD4" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp_sem"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="100dp"
                android:backgroundTint="#039BE5"
                android:fontFamily="@font/aladin"
                android:padding="15dp"
                android:text="Submit"
                android:textColor="#000000"
                android:textSize="18sp"
                app:cornerRadius="10dp"
                android:layout_marginBottom="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:strokeColor="#FFFFFF"
                app:strokeWidth="2dp" />






        </RelativeLayout>
    </ScrollView>

</RelativeLayout>